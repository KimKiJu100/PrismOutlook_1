<igWpf:RibbonTabItem x:Class="PrismOutlook.Modeuls.Contacts.Views.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:igWpf="http://schemas.infragistics.com/xaml/wpf"
             xmlns:local="clr-namespace:PrismOutlook.Modeuls.Contacts.Views"
             Header="Contacts">
    
    <igWpf:RibbonGroup Caption="New">
        <igWpf:ToolHorizontalWrapPanel>
            <igWpf:ButtonTool Caption="Button" igWpf:RibbonGroup.MaximumSize="ImageAndTextLarge" Command="{Binding TestCommand}"/>
        </igWpf:ToolHorizontalWrapPanel>
    </igWpf:RibbonGroup>
</igWpf:RibbonTabItem>
